{
    /* ======================================== */
    /* Git settings */
    "git.enableSmartCommit": true,
    "git.postCommitCommand": "sync",
    "git.autofetch": "all",
    "git.confirmSync": false,
    /* ======================================== */
    /* General settings for LaTeX extension */
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                // "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "makeindex",
            "command": "makeindex",
            "args": [
                "%DOCFILE%.nlo",
                "-s",
                "nomencl.ist",
                "-o",
                "%DOCFILE%.nls"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-pdflatex=\"xelatex -file-line-error -halt-on-error -interaction=nonstopmode -synctex=1 %O %S\"",
                "-pdf",
                "%DOCFILE%.tex"
            ]
        }
    ],
