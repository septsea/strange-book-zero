    // "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.view.pdf.invertMode.enabled": "auto",
    "latex-workshop.view.pdf.invert": 0.9,
    "latex-workshop.view.pdf.trim": 3,
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.args": [
        "%PDF%"
    ],
    "latex-workshop.view.pdf.external.synctex.args": [
        "-forward-search",
        "%TEX%",
        "%LINE%",
        "%PDF%"
    ],
    // Change these 2 paths when necessary
    "latex-workshop.view.pdf.external.viewer.command": "C:\\Program Files\\SumatraPDF\\SumatraPDF.exe",
    "latex-workshop.view.pdf.external.synctex.command": "C:\\Program Files\\SumatraPDF\\SumatraPDF.exe",
    "latex-workshop.showContextMenu": false,
    "latex-workshop.latex.recipe.default": "lastUsed",
    // "editor.wordWrap": "on",
    "latex-workshop.synctex.synctexjs.enabled": false,
    // "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    "latex-workshop.mathpreviewpanel.editorGroup": "below",
    "[latex]": {
        "editor.wordWrap": "on",
        "files.insertFinalNewline": true
    },
    /* ======================================== */
    /* Fancy settings below. */
    "cSpell.ignoreWords": [
        "addcontentsline",
        "arraycolsep",
        "markright",
        "mathbb",
        "mathrm",
        "qedhere",
        "texorpdfstring"
    ],
    "todo-tree.filtering.excludeGlobs": [
        "**/*.ttc",
        "**/*.ttf",
        "**/*.djvu",
        "**/*.pdf",
        "**/*.md"
    ]
}